// Log the URLs we need
//server.log("Turn Machine On: " + http.agenturl() + "?stopped=false");
//server.log("Turn Machine Off: " + http.agenturl() + "?stopped=true");
 
function requestHandler(request, response) {
  try {
    // check if the user sent led as a query parameter
    if ("stopped" in request.query) {
      
      local stopState = request.query.stopped;
 
      device.send("setStopped", stopState); 
    }
    // send a response back saying everything was OK.
    response.send(200, "OK");
  } catch (ex) {
    response.send(500, "Internal Server Error: " + ex);
  }
}
 
// register the HTTP handler
http.onrequest(requestHandler);